<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Quiz">

    <LinearLayout
        android:id="@+id/Title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Quiz Area"
            android:gravity="center"
            android:padding="10sp"
            android:textSize="32sp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Title_bar"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp">

        <LinearLayout
            android:id="@+id/questions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="1. What keyword is used to inherit from the super class?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: extends"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/Question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="2. How many superclass can you extend to?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: 1"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="3. Can you instantiate an abstract class?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: No, abstract classes cannot be instantiated."
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="4. What does this literal mean ' - ' in a class diagram?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: private"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="5. What does SDK stands for?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: Software Development Kit"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="6. How do you return from an activity to the previous one in android studio?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: By using the finished() keyword inside the onCreate"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="7. What OOP concept is being used when we are using getters and setters?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: Encapsulation"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Question_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="30"
                android:padding="10sp"
                android:scrollHorizontally="false"
                android:text="8. What do you use to store the return value of a select query statement?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnanswer_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Answer" />

            <TextView
                android:id="@+id/answer_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Answer: ResultSet"
                android:textSize="18sp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>